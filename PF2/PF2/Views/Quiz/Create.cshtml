@model PF2.Models.Quiz

@{
    ViewBag.Title = "CreateQuiz";
}

<h2>CreateQuiz</h2>

<label class="control">Node</label>
@ViewBag.NameNode

<label class="control">Description</label>
@ViewBag.DescriptionNode
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Quiz</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        
        <div class="form-group">
            @Html.LabelFor(model => model.NumQuestions, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumQuestions, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumQuestions, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model => model.NodeId, new { nodeId = (int)ViewBag.NodeId })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
