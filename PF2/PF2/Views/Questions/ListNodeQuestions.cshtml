@model IEnumerable<PF2.Models.Question>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "CreateQuestionToNode", new { nodeId = ViewBag.NodeId })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enunciation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Node.Name)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Enunciation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Node.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id,nodeId = (int)ViewBag.NodeId }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, nodeId = (int)ViewBag.NodeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, nodeId = (int)ViewBag.NodeId }) |
                <a href="@Url.Action("Index", "AnswerOptions", new { QuestionId = (int)item.Id })">Answer options</a>

               

            </td>
        </tr>
    }
    
    </table>
</body>
</html>
